BURGFLAGS = -d -I -=

INCLUDES = b.h fe.h

BU_SRCS = burs.c closure.c delta.c item.c list.c map.c nonterminal.c \
	operator.c pattern.c queue.c rule.c table.c trim.c zalloc.c

